{
  "name": "ReadMeTheText Beta",
  "short_name": "ReadMeTheText",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Read text on a page using Google's high quality voices.",
  "homepage_url": "https://readmethetext.com/",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "ReadTextToMe",
    "default_popup": "src/toolbarpopup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "24": "icons/icon_24.png",
      "32": "icons/icon_32.png"
    }
  },
  "options_page": "src/options.html",
  "permissions": ["contextMenus", "storage", "alarms"],
  "optional_permissions": ["clipboardRead"],
  "background": {
    "page": "src/background.html",
    "persistent": false
  },
  "content_security_policy": "default-src 'self'; connect-src https://texttospeech.googleapis.com"
}
